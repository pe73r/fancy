      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "checkbox",
            "id": "show_insta_picto",
            "label": "Show picto instagram ?",
            "default": false
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Another productive way to use this tool to begin a daily writing routine. One way is to generate a random paragraph with the intention to try to rewrite it while still keeping the...</p>"
          }
      ]
    }
  ],
  "presets": [
    {
