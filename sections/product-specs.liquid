{
  "name": "Product specs",
  "class": "index-section--small",
  "settings": [

  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
           {
             "type": "text",
             "id": "title",
             "label": "Title",
             "default": "Title"
           },
           {
             "type": "text",
             "id": "svg",
             "label": "Svg image",
             "info": "Paste the url from files"
           },
           {
             "type": "richtext",
             "id": "content",
             "label": "Content",
             "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>"
           }
      ]
    },
    {
      "type": "description",
      "name": "Product description",
      "limit": 1,
      "settings": [
           {
             "type": "text",
             "id": "title",
             "label": "Title",
             "default": "Descripci√≥n del producto"
           }
      ]
    },
    {
      "type": "details",
      "name": "Product details",
      "limit": 1,
      "settings": [
           {
             "type": "text",
             "id": "title",
             "label": "Title",
             "default": "Detalles del producto"
           },
           {
             "type": "paragraph",
             "content": "Content from the metafield 'product.metafields.my_fields.product_details'"
           }
      ]
    }
  ],
  "presets": [
