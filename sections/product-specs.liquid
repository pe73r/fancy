<div class="page-width">
  <div class="collapsibles-wrapper collapsibles-wrapper--border-bottom">
    {%- for block in section.blocks -%}
      {% if block.type == 'description' %}
        <button type="button" class="label collapsible-title collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders" aria-controls="Product-content-3-{{ block.id }}">
            {% render 'icon-description' %}
            {{ block.settings.title }}

          {% include 'collapsible-icons'%}
        </button>
        <div id="Product-content-3-{{ block.id }}" class="collapsible-content collapsible-content--all">
          <div class="collapsible-content__inner rte">
              {{ product.description }}
          </div>
        </div>
      {% elsif block.type == 'details' %}
          <button type="button" class="label collapsible-title collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders" aria-controls="Product-content-3-{{ block.id }}">
              {% render 'icon-ruler' %}
              {{ block.settings.title }}

            {% include 'collapsible-icons'%}
          </button>
          <div id="Product-content-3-{{ block.id }}" class="collapsible-content collapsible-content--all">
            <div class="collapsible-content__inner rte">
                {{ product.metafields.my_fields.product_details  }}
            </div>
          </div>
      {% else %}
          <button type="button" class="label collapsible-title collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders" aria-controls="Product-content-3-{{ block.id }}">
              {%- if block.settings.svg != blank -%}
                <img class="collapsible-icon" src="{{ block.settings.svg }}" alt="">
              {%- endif -%}

              {{ block.settings.title }}

            {% include 'collapsible-icons' %}
          </button>
          <div id="Product-content-3-{{ block.id }}" class="collapsible-content collapsible-content--all">
            <div class="collapsible-content__inner rte">
               {{ block.settings.content }}
            </div>
          </div>
      {% endif %}
    {%- endfor -%}
  </div>
</div>
